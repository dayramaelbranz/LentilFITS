<body class="hold-transition skin-red-light sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          All Site Consumptions
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Consumptions</li>
        </ol>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">

              <!-- /.box-header -->
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Item Name</th>
                      <th>Category</th>
                      <th>Used Qty</th>
                      <th>In size</th>
                      <th>Sites</th>
                      <th>Used Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @consumptions.each do |consumption| %>
                    <tr>
                      <td><%= consumption.stock.name %></td>
                      <td><%= consumption.stock.category.name %></td>
                      <% if consumption.quantity % 1 == 0 %>
                      <td><%= consumption.quantity.to_i %></td>
                      <%else%>
                      <td><%= consumption.quantity%></td>
                      <%end%>
                      <td><%= consumption.stock.size.name %></td>
                      <td><%= consumption.site.name%></td>
                      <td><%= (consumption.created_at + 10*60*60).strftime("%A, %d/%m/%Y %l:%M %p") %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>
      </section>
      
    </div>
    <%= render 'layouts/footer' %>
  </div>
  <script>
    $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false
      });
    });
  </script>
</body>
