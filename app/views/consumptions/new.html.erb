<body class="hold-transition skin-red-light sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>New Consumption</h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home"></i>Home Page</a></li>
          <li class="active">Consumption</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for @consumption do |f| %>
                <% if @consumption.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@consumption.errors.count, 'error') %> prohibited this stock from being saved:</h2>
                    <ul>
                      <% @consumption.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="box-body">
                  <label>Item Name</label>
                  <div class="well well-sm">
                   <%= @stock.name %>
                 </div>
                  <div class="form-group">
                    <label>Quantity</label>
                    <%= f.number_field :quantity, step: :any,  class: 'form-control', placeholder: 'Enter Quantity', required: true, value: @stock.quantity %>
                  </div>
                  <div class="form-group">
                  <label>Size</label>
                    <div class="well well-sm">
                      <%= @stock.size.name %>
                    </div>
                  </div>
                  
                  <%= f.number_field :stock_id, :value => params[:stock], :hidden => true %>
                  <%= f.number_field :site_id, :value => current_user.site.id, :hidden => true %>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $(document).ready(function () {
        $.widget.bridge('uibutton', $.ui.button);
        $('.datepicker').datepicker({format: 'yyyy/mm/dd'});
      });
    </script>
  </div>
</body>
