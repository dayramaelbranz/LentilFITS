<body class="hold-transition skin-red-light sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Sites
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Sites List</li>
        </ol>
      </section>
      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">
              <!-- /.box-header -->
              <a class="btn btn-success adddonator" href="<%= new_site_path %>" role="button">Add New Site</a>
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Address</th>
                      <th>Phone</th>
                      <th>Edit</th>
                      <!--<th>Delete</th>-->
                    </tr>
                  </thead>
                  <tbody>
                    <% @sites.each do |site| %>
                    <tr>
                      <td><%= site.name %></td>
                      <td><%= site.address %></td>
                      <td><%= site.phone %></td>
                      <td><%= link_to 'Edit', edit_site_path(site) %></td>
                      <!--<td><%= link_to 'Delete', site, method: :delete, data: { confirm: 'Are you sure you want to delete this stock?' } %></td>-->
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>
      </section>
    </div>
    <%= render 'layouts/footer' %>
  </div>
  <script>
    $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false
      });
    });
  </script>
</body>
